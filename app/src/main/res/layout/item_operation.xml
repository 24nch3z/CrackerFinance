<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools">
    <data>
        <import type="ru.s4nchez.crackerfinance.model.OperationType"/>
        <variable
            name="viewModel"
            type="ru.s4nchez.crackerfinance.screens.main.list.OperationViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55E1D6B7"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{(viewModel.operation.type == OperationType.income ? "" : "-") + viewModel.operation.sum + viewModel.operation.currency.symbol}'
                android:textColor="@{viewModel.operation.type == OperationType.income ? @color/colorAccent : @color/colorPrimaryDark}"
                tool:text="100$"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="23.07.18"
                android:textColor="@color/colorAccent"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</layout>