<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="ru.s4nchez.crackerfinance.screens.main.MainScreenViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/main_screen_title_bottom_margin"
                android:gravity="center"
                android:text="Ваш баланс"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_screen_title_size"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="136 $"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_screen_balance_size"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="14325 ₽"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_screen_balance_size"
                android:textStyle="bold"/>
        </LinearLayout>

    </FrameLayout>

</layout>